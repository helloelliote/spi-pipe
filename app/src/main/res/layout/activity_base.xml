<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Spi.Toolbar"
            app:title="@string/app_title">

            <TextView
                android:id="@+id/nmap_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/btn_find_spi"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/nmap_mapmode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                app:checkedBackgroundColor="@color/green"
                app:checkedTextColor="@android:color/black"
                app:textToggleLeft="@string/map_mode_basic"
                app:textToggleRight="@string/map_mode_hybrid"
                app:toggleWidth="45dp"
                app:uncheckedBackgroundColor="@android:color/white" />
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/activity_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:indeterminateOnly="true"
                android:indeterminateTint="@color/blue_bright"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

        <ImageButton
            android:id="@+id/nav_swipe_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_swipe_left"
            android:tint="@color/colorPrimary"
            tools:ignore="ContentDescription" />

        <android.support.design.button.MaterialButton
            android:id="@+id/nav_close"
            style="@style/Spi.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="@string/nav_close" />
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>