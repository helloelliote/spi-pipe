<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Spi.Toolbar"
            app:title="@string/app_title">

            <TextView
                android:id="@+id/setting_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/setting_confirm"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nmap_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/btn_find_spi"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
                android:id="@+id/nmap_mapmode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                app:checkedBackgroundColor="@color/green"
                app:checkedTextColor="@android:color/black"
                app:textToggleLeft="@string/map_mode_basic"
                app:textToggleRight="@string/map_mode_hybrid"
                app:toggleWidth="45dp"
                app:uncheckedBackgroundColor="@android:color/white" />
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/activity_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:indeterminateOnly="true"
                android:indeterminateTint="@color/blue_bright"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/drawer_main">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nav_close"
            style="@style/Spi.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:text="@string/nav_close" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>