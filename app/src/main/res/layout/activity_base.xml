<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="15dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/AppTheme.SPI.Toolbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:title="@string/app_name"
                    app:titleTextColor="@android:color/white" />

                <TextView
                    android:id="@+id/nmap_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/button_find"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
                    android:id="@+id/nmap_mapmode_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:visibility="gone"
                    app:checkedBackgroundColor="@color/green"
                    app:checkedTextColor="@android:color/black"
                    app:textToggleLeft="@string/map_mode_basic"
                    app:textToggleRight="@string/map_mode_hybrid"
                    app:toggleWidth="45dp"
                    app:uncheckedBackgroundColor="@android:color/white" />
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/activity_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:src="@drawable/icon_search_w"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header_main">

        <TextView
            android:id="@+id/nav_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/colorPrimary"
            android:padding="10dp"
            android:text="@string/nav_close"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>