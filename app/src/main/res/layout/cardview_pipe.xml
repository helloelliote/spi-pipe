<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <!--<studio.carbonylgroup.textfieldboxes.TextFieldBoxes-->
        <!--android:id="@+id/p_type"-->
        <!--style="@style/TextFieldBoxes"-->
        <!--app:iconSignifier="@drawable/ic_edit"-->
        <!--app:labelText="관로종류">-->

        <!--<studio.carbonylgroup.textfieldboxes.ExtendedEditText-->
        <!--android:id="@+id/in_type"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
        <!--</studio.carbonylgroup.textfieldboxes.TextFieldBoxes>-->

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_shape"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_shape"
            app:labelText="매설형태를 선택하세요">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textImeMultiLine" />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/p_dist_hor"
                style="@style/TextFieldBoxes.FreeSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                app:labelText="이격거리(수평)">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/in_dist_hor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/record_input_2_hor"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    app:suffix="m" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/p_dist_ver"
                style="@style/TextFieldBoxes.FreeSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                app:labelText="이격거리(수직)">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/in_dist_ver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/record_input_2_ver"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    app:suffix="m" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        </LinearLayout>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_depth"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_depth"
            app:labelText="매설심도">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_depth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                app:prefix="지하  "
                app:suffix="m" />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_spec"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_spec"
            app:labelText="관로스펙">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                app:prefix="지름  "
                app:suffix="mm" />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_material"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_material"
            app:labelText="관로재질">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_supervise"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_supervise"
            app:labelText="관리기관">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_supervise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="text"
                app:prefix="기관명  " />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_supervise_contact"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_contact"
            app:labelText="관리기관 연락처">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_supervise_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="phone"
                app:prefix="전화번호  " />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_memo"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_memo"
            app:labelText="메모">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/record_optional"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine" />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_construction"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_construction"
            app:labelText="시공업체">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_construction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/record_optional"
                android:imeOptions="actionNext"
                android:inputType="text"
                app:prefix="시공업체명  " />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_construction_contact"
            style="@style/TextFieldBoxes"
            app:iconSignifier="@drawable/ic_contact"
            app:labelText="시공업체 연락처">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_construction_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/record_optional"
                android:imeOptions="actionDone"
                android:inputType="phone"
                app:prefix="전화번호  " />
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/p_photo"
            style="@style/TextFieldBoxes"
            app:enabled="false"
            app:iconSignifier="@drawable/ic_photo"
            app:labelText="사진을 첨부하려면 터치하세요">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/in_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"/>
        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    </LinearLayout>
</android.support.design.card.MaterialCardView>