<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/popup_color_bg_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/btn_close_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tab_body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="DuplicateIds">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:rotation="180"
                android:src="@drawable/ic_fast_forward"
                android:tint="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/popup_title_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/imageButtonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_fast_forward"
                android:tint="@android:color/holo_red_dark" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lay_row_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/lay_5"
                            android:layout_width="124dp"
                            android:layout_height="124dp"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:id="@+id/image_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/lay_6"
                            android:layout_width="124dp"
                            android:layout_height="124dp">

                            <ImageView
                                android:id="@+id/image_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_row_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/lay_7"
                            android:layout_width="124dp"
                            android:layout_height="124dp"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:id="@+id/image_7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/lay_8"
                            android:layout_width="124dp"
                            android:layout_height="124dp">

                            <ImageView
                                android:id="@+id/image_8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lay_row_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/lay_1"
                            android:layout_width="124dp"
                            android:layout_height="124dp">

                            <ImageView
                                android:id="@+id/image_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/lay_2"
                            android:layout_width="124dp"
                            android:layout_height="124dp"
                            android:layout_marginStart="10dp">

                            <ImageView
                                android:id="@+id/image_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_row_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/lay_3"
                            android:layout_width="124dp"
                            android:layout_height="124dp"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:id="@+id/image_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/lay_4"
                            android:layout_width="124dp"
                            android:layout_height="124dp">

                            <ImageView
                                android:id="@+id/image_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/imageview_border"
                                android:cropToPadding="true" />

                            <ImageView
                                android:id="@+id/v_select_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/btn_on2"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/line_a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/popup_pre"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <View
            android:layout_width="0.33dp"
            android:layout_height="match_parent"
            android:background="@color/line_a" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/popup_next"
            android:textColor="@color/blue_bright"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
