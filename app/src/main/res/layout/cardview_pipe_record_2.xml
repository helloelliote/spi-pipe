<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:singleLine="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="Autofill">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbarDefaultDelayBeforeFade="3000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:id="@+id/lay_input_0"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_0"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_0_hint"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyErrorString="필수입력 항목입니다"
                        app:testType="nocheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_1"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_1_hint"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyErrorString="필수입력 항목입니다"
                        app:testType="nocheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_2"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_2_hint"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyErrorString="필수입력 항목입니다"
                        app:testType="floatNumericRange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_3"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_3_hint"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyErrorString="필수입력 항목입니다"
                        app:testType="floatNumericRange" />

                    <TextView
                        android:id="@+id/txt_pipe_unit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center_vertical|end"
                        android:text="m" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyErrorString="필수입력 항목입니다"
                        app:testType="floatNumericRange" />

                    <TextView
                        android:id="@+id/txt_pipe_unit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.50"
                        android:gravity="center_vertical|end"
                        android:maxLines="1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_5"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_5_hint"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyErrorString="필수입력 항목입니다"
                        app:testType="nocheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center_vertical|end" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_6"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:hint="@string/record_input_6_hint"
                        android:imeOptions="actionNext"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_7"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_7"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_7_hint"
                        android:inputType="phone"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:testErrorString="유효한 전화번호가 아닙니다"
                        app:testType="phone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_8"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_8"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_8_hint"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyAllowed="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_9"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_9"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_9_hint"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyAllowed="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_10"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_10"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_contents"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:hint="@string/record_input_10_hint"
                        android:inputType="phone"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyAllowed="true"
                        app:testErrorString="유효한 전화번호가 아닙니다"
                        app:testType="phone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="@color/line_d" />

                <LinearLayout
                    android:id="@+id/lay_input_photo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:gravity="center_vertical"
                        android:text="@string/record_input_photo"
                        android:textColor="@android:color/black" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/etxt_input_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:paddingStart="10dp"
                        android:text="@string/record_input_photo_hint"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.0"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_photo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_photo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"
                        android:gravity="center_vertical" />

                    <com.ab.widget.FormEditText
                        android:id="@+id/txt_photo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorPrimary"
                        app:emptyAllowed="true" />

                    <LinearLayout
                        android:id="@+id/lay_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!--<ImageView-->
                            <!--android:id="@+id/img_edit"-->
                            <!--android:layout_width="38dp"-->
                            <!--android:layout_height="38dp"-->
                            <!--android:src="@drawable/btn_modify" />-->

                        <!--<ImageView-->
                            <!--android:id="@+id/img_del"-->
                            <!--android:layout_width="38dp"-->
                            <!--android:layout_height="38dp"-->
                            <!--android:src="@drawable/btn_remove" />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.button.MaterialButton
                android:id="@+id/button_cancel"
                style="@style/Spi.TextButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_cancel" />

            <android.support.design.button.MaterialButton
                android:id="@+id/button_confirm"
                style="@style/Spi.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/record_confirm" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>