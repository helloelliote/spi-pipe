<resources>

    <!-- Base application theme. -->
    <style name="Spi.Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nanumsquareroundr</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Spi.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="Spi.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/Spi.Theme</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Spi.TableRow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:keyTextSize">10sp</item>
        <item name="android:labelTextSize">10sp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Spi.TextInputLayout.Counter" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/Spi.TextInputLayout.HintText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">12</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorTextAppearance">@style/Spi.ErrorText</item>
        <item name="counterTextAppearance">@color/colorPrimaryDark</item>
    </style>

    <style name="Spi.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/Spi.TextInputLayout.HintText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Spi.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextFieldBoxes">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="panelBackgroundColor">#0D0D2C54</item>
        <item name="useDenseSpacing">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxRows">1</item>
        <item name="secondaryColor">@color/colorPrimaryDark</item>
        <item name="primaryColor">#1c73e8</item>
    </style>

    <style name="Spi.ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spi.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Spi.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
