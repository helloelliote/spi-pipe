<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.SPI.Pipe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nanumsquareroundr</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.SPI.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="AppTheme.SPI.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/AppTheme.SPI.Pipe</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SPI.TableRow" parent="AppTheme.SPI.Pipe">
        <item name="android:keyTextSize">10sp</item>
        <item name="android:labelTextSize">10sp</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
