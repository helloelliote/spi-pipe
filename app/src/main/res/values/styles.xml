<resources>
    <!-- Base application theme. -->
    <style name="Spi.Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nanumsquareroundr</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@color/colorFontDark</item>
    </style>

    <style name="Spi.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="Spi.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/Spi.Theme</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Spi.TableRow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:keyTextSize">10sp</item>
        <item name="android:labelTextSize">10sp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextFieldBoxes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="panelBackgroundColor">#0A000000</item>
        <item name="useDenseSpacing">true</item>
        <item name="android:colorControlHighlight">@color/blue_bright</item>
        <item name="primaryColor">@color/colorAccent</item>
        <item name="secondaryColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextFieldBoxes.FreeSize">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="panelBackgroundColor">#0A000000</item>
        <item name="useDenseSpacing">true</item>
        <item name="android:colorControlHighlight">@color/blue_bright</item>
        <item name="secondaryColor">@color/colorPrimaryDark</item>
        <item name="primaryColor">@color/colorAccent</item>
    </style>

    <style name="FormEditText.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.25</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="testType">nocheck</item>
        <item name="emptyErrorString">"필수입력 항목입니다"</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="Spi.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Spi.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Spi.Tab" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/Spi.Theme</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabSelectedTextColor">@color/yellow</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabIndicatorHeight">8dp</item>
    </style>
</resources>
